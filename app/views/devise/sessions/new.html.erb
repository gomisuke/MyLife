<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7 border my-5 p-5">
      <h2 class="text-center border-bottom my-3">ログイン画面</h2>

       <%= form_for(resource, as: resource_name, url: session_path(resource_name), 'data-turbolinks':false) do |f| %>
         <div class="form-group">
           <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control is-valid" %>
         </div>

         <div class="form-group">
           <%= f.label :password %><br />
           <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
         </div>

         <div class="actions">
           <%= f.submit "ログイン", class:"btn btn-success w-100" %>
         </div>
       <% end %>
    </div>
  </div>
</div>
