<div class="container">
	<div class="row pt-5">
		<div class="col-md-4 post-index-title">
			<h2><i class="fas fa-book"></i>投稿一覧</h2>
		</div>
		<div class="col-md-5 offset-md-1">
			<%= form_with url: post_search_path, method: :get, local: true do |f| %>
			<div class="form-group input-group">
				<%= f.text_field :post_search, class:"form-control" %>
				<%= f.submit '検索', class:"btn btn-secondary"%>
			</div>
			<% end %>
		</div>
		<div class="col-md-2">
			<%= link_to "投稿する", new_post_path, class:"btn btn-success" %>
		</div>
	</div>
	<div class="row">
		<div class="col-10 offset-1">
			検索：<%= @search_word %>
		</div>
	</div>
	<div class="row justify-content-center mt-2">
		<!-- タグ一覧 -->
		<div class="col-md-2 search-box">
			<!-- 検索フォーム -->
			<%= form_with url:posts_path, method: :get, local: true do |f| %>
				<%= f.label :search, "タグ検索フォーム" %>
				<%= f.text_field :search, class:"form-control" %>
				<%= f.submit "検索", class:"btn btn-success btn-sm w-100" %>
			<% end %>
			<%= link_to "検索リセット", posts_path, class:"btn btn-info btn-sm w-100" %>
			<% @tags.each do |tag| %>
				<% if tag.posts.count != 0 %>
					<%= link_to "#{tag.name}(#{tag.posts.count})", posts_path(tag_search: tag.id ) %><br>
				<% end %>
			<% end %>
		</div>
		<!-- 投稿一覧 -->
		<div class="col-md-9">
			<div class="row">
			<% @posts.each do |post| %>
				<div class="col-md-4">
					<div class="card">
						<%= link_to post_path(post.id) do %>
							<%= attachment_image_tag(post, :post_image, :fill, 100, 100, format: "jpeg", fallback: "no-image-camera.png", size: "100x100", class:"img-fluid card-img-top") %>
						<% end %>
						<div class="card-body">
							<%= post.content %>
							<div class="post-<%= post.id %>">
								<%= render 'likes/like', { post: post } %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>