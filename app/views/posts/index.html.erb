<div class="container">
	<div class="row pt-5">
		<div class="col-md-12 text-center">
			<h2>みんなの投稿</h2>
		</div>
	</div>
	<div class="row">
		<!-- タグ一覧 -->
		<div class="col-md-2 border mr-4">
			<%= link_to "投稿する", new_post_path %><br>
			<!-- 検索フォーム -->
			<%= form_with url:posts_path, method: :get, local: true do |f| %>
				<%= f.text_field :search, class:"form-control" %>
				<%= f.submit "検索" %>
			<% end %>
			<%= link_to "検索リセット", posts_path, class:"btn" %>
			<% @tags.each do |tag| %>
				<%= link_to "#{tag.name}(#{tag.posts.count})", posts_path(tag_search: tag.id ) %><br>
			<% end %>
		</div>
		<!-- 投稿一覧 -->
		<div class="col-md-9">
			<div class="row">
			<% @posts.each do |post| %>
				<div class="col-md-4 post-box">
					<div class="card">
						<%= link_to post_path(post.id) do %>
							<%= attachment_image_tag(post, :post_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpeg", size: "100x100", class:"img-fluid card-img-top") %>
						<% end %>
						<div class="card-body">
							<%= post.content %>
							<div class="post-<%= post.id %>">
								<%= render 'likes/like', { post: post } %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>

