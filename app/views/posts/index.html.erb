<div class="container">
	<div class="row pt-5">
		<div class="col-md-12 text-center">
			<h2>みんなの投稿</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2 border mr-4">
			<%= link_to "投稿する", new_post_path %>
		</div>
		<div class="col-md-9">
			<div class="row">
			<% @posts.each do |post| %>
				<div class="col-md-4 post-box">
					<div class="card">
						<%= link_to post_path(post.id) do %>
						<%= image_tag attachment_url(post, :post_image, :fill, 200, 200, format: "jpeg", fallback: "no_image.jpeg"), class:"card-item post-image" %>
						<% end %>
						<div class="card-body">
							<%= post.content %>
						</div>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>

