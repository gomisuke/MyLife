<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10 pt-5">
			<div class="col-4 custom-index-title">
				<h2><i class="fas fa-file-alt"></i>タスク一覧</h2>
			</div>
			<div class="management-table">
				<table class="table">
					<tbody>
						<% @customs.each do |custom| %>
						<tr>
							<td><%= custom.task %></td>
							<td><%= link_to "削除", custom_path(custom), method: :delete, class:"btn btn-danger btn-sm" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-10 pt-2">
			<%= form_with model: @custom, local: true do |f| %>
			<h3><i class="fas fa-plus-square"></i><%= f.label :task ,"新しい習慣を作る"%></h3>
			<%= render 'shared/error_messages', {model: f.object} %>
			<div class="form-group form-inline">
				<%= f.text_field :task, class:"form-control w-75" %>
				<%= f.submit "作成", class:"btn btn-success" %>
			</div>
			<%#= f.submit "作成", class:"btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>
