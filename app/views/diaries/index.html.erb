<div class="container">
	<div class="row mt-5">
		<div class="title">
		</div>
		<div class="col-4 diary-index-title">
			<h2><i class="fas fa-book"></i>日記一覧</h2>
		</div>
		<div class="offset-4 col-3">
			<%= link_to "日記を書く", new_diary_path, class:"btn btn-success" %>
		</div>
	</div>
	<div class="row justify-content-around mt-2">
		<div class="col-md-4 border overflow-auto diary-table mb-3">
			<table class="table">
				<thead>
					<tr>
						<th class="w-75">日付</th>
						<th class="w-25"></th>
					</tr>
				</thead>
				<tbody>
					<% @diary_all.each do |diary| %>
					<tr>
						<td><%= diary.diary_date.strftime("%Y年%m月%d日") %><br>
						<i class="fas fa-bookmark"></i><%= diary.title %></td>
						<td><%= link_to "詳細", diary_path(diary.id), class:"btn btn-success btn-sm", id:"diary-show-btn" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-7 border py-4 mb-3">
			<% @diaries.each do |diary| %>
				<div class="row">
					<div class="col-3">
						<div class="badge badge-dark py-2">
							<%= diary.diary_date.strftime("%Y年%m月%d日") %>
						</div>
						<div class="text-center pt-2">
							<%= adequacy_status(diary) %>
						</div>
					</div>
					<div class="col-9">
						<h4 class="border-bottom"><%= diary.title %></h4>
						<div class="overflow-auto diary-index">
							<%= diary.body %>
						</div>
					</div>
				</div>
			<% end %>

				<%= paginate @diaries %>
		</div>
	</div>
</div>
