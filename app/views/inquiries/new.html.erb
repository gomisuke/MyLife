<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8 mt-5 py-5 border">
			<h2 class="text-center border-bottom">お問い合わせフォーム</h2>
			<%= form_with model: @inquiry do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class:"form-control", value:current_user.name, readonly: true %>
				</div>
				<div class="form-group">
					<%= f.label :mail %>
					<%= f.text_field :mail, class:"form-control" , value:current_user.email, readonly: true%>
				</div>
				<div class="form-group">
					<%= f.label :message %>
					<%= f.text_field :message, class:"form-control" %>
				</div>
				<%= f.submit "送信", class:"btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>
