<div class="container">
	<div class="text-center">
		<h1>マイページ</h1>
	</div>
	<div class="row">
		<div class="offset-1 col-md-10">
			<div class="row  border py-3 my-page">
				<div class="col-md-4 mx-auto text-center">
					<%= image_tag attachment_url(@user, :profile_image, :fill, 200, 200, format: "jpeg", fallback: "no_image.jpeg"), class:"profile-image" %>
					<p class="mt-3"><%= @user.name %></p>
					<P><%= @user.acount_name %></P>
					<%= link_to "会員登録情報編集", "", class:"btn btn-success" %>
				</div>
				<div class="col-md-6 align-self-center">
					
					<p>日記：<%= @user.diaries.count %></p>
					<p>投稿：<%= @user.posts.count %></p>
					<p><%= @user.introduction %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<ul class="nav nav-tabs">
						<li class="nav-item"><%= link_to "日記", mypage_diary_path, remote: true, class:"nav-link px-5" %></li>
						<li class="nav-item"><%= link_to "投稿", mypage_post_path, remote: true, class:"nav-link px-5" %></li>
						<li class="nav-item"><%= link_to "いいね", mypage_like_path, remote: true, class:"nav-link px-5" %></li>
					</ul>
					<div id="mypage-tab">
						<%= render 'shared/mypage_diary', { diaries: @diaries } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
