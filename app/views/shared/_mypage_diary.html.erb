<div class="row mt-3 overflow-auto mypage-box">
	<% diaries.each do |diary| %>
	<div class="offset-1 col-md-10 border my-2 py-4">
		<div class="row">
			<div class="col-3">
				<div class="badge badge-dark py-2">
					<%= diary.diary_date.strftime("%Y年%m月%d日") %>
				</div>
				<div class="text-center pt-2">
					<% case diary.adequacy %>
					<% when 1 %>
						<img src="/assets/nicochan5.png" class="diary-image-mypage">
					<% when 2 %>
						<img src="/assets/nicochan4.png" class="diary-image-mypage">
					<% when 3 %>
						<img src="/assets/nicochan1.png" class="diary-image-mypage">
					<% when 4 %>
						<img src="/assets/nicochan2.png" class="diary-image-mypage">
					<% when 5 %>
						<img src="/assets/nicochan3.png" class="diary-image-mypage">
					<% end %>
				</div>
			</div>
			<div class="col-9">
				<%= link_to diary_path(diary.id) do %>
					<h4 class="border-bottom"><%= diary.title %></h4>
				<% end %>
					<%= diary.body %>

			</div>
		</div>
	</div>
	<% end %>
</div>