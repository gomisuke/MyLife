<% if post.liked_by?(current_user) %>
	<%= link_to post_like_path(post, current_user), method: :delete, remote: true, id:"like-btn" do %>
		<i class="fas fa-heart", id="like-on"></i>
	<% end %>
<% else %>
	<%= link_to post_likes_path(post), method: :post, remote: true, id:"not-like-btn" do %>
		<i class="far fa-heart", id="like-off"></i>
	<% end %>
<% end %>