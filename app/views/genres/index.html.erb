<div class="container">
	<div class="row">
		<div class="col-md-4 offset-1">
			<table class="table">
				<thead>
					<tr>
						<td><h4>ジャンル一覧</h4></td>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= link_to "削除", genre_path(genre.id), method: :delete, class:"btn btn-danger" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-4">
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 offset-1">
			<%= form_with model: @genre do |f| %>
				<%= f.label :name %>
				<%= f.text_field :name %>
				<%= f.submit "作成", class:"btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>